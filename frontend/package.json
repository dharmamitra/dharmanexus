{
  "name": "buddhanexus-frontend-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build:dm": "sh ./scripts/set_env.sh dharmamitra && next build",
    "build:kp": "sh ./scripts/set_env.sh kumarajiva && next build",
    "build": "next build",
    "build:compile": "next build --experimental-build-mode compile && mkdir -p .next/standalone/.next && cp -r .next/static .next/standalone/.next/",
    "start": "node .next/standalone/server.js",
    "lint": "eslint . --fix",
    "test:ts": "tsc --noEmit",
    "postinstall": "husky",
    "api:ts": "openapi-typescript && eslint ./src/codegen/api/*.ts --fix",
    "prepare": "husky install && git config core.hooksPath frontend/.husky",
    "analyzeBundle": "ANALYZE=true yarn build"
  },
  "browser": {
    "fs": false,
    "os": false,
    "path": false
  },
